
<div class="container">
	<h3>Reminders</h3>
	<table class='table'>
		<% if(posts.length > 0) {%>
			<tr>
				<th>ID</th>
				<th>Title</th>
				<th>Solution</th>
				<th>Count</th>
				<th></th>
			</tr>
		<% } %>

		<% _.each(posts, function(post) { %>
			<tr data-id="<%= post.id %>" data-model="post">
				<td><%= post.id %></td>
				<td><%= post.title %></td>
				<td><%= post.solution %></td>
				<td><%= post.lookupCount %></td>
				<td><a href="/post/show/<%= post.id %>" class="btn btn-sm btn-primary">Show</a>
				<a href="/post/edit/<%= post.id %>" class="btn btn-sm btn-warning">Edit</a>
				<a href="/post/destroy/<%= post.id %>" method="data-delete" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-sm btn-danger">Delete</a>
			</tr>
		<% }) %>
	</table>
	<h4><a href="/post/new">+ADD+</h4>
</div>

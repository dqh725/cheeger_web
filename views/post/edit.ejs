<div class="container page">
  <form action="/post/update/<%= post.id %>" method="PUT">
    <input type='hidden' name='_csrf' value='<%= _csrf %>'>
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" value="<%= post.title %>" class="form-control"/>
    </div>

    <div class="form-group">
      <label for="solution">Solution</label>
      <textarea id="solution" name="solution" value= "<%= post.solution %>" class="form-control"></textarea>
    </div>
    <input type="submit" name="commit" class="btn btn-primary"/>
  </form>
</div>


<script>
  $(document).ready (function () {
    var simplemde = new SimpleMDE({ element: document.getElementById("solution") });
    simplemde.value(document.getElementById("solution").getAttribute("value"));
  });
</script>
